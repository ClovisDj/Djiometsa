container_commands:
  01_syncdb:
    command: "python manage.py migrate --noinput"
    leader_only: true
  02_createsu:
    command: "python manage.py createsu"
    leader_only: true
option_settings:
  "aws:elasticbeanstalk:application:environment":
    DJANGO_SETTINGS_MODULE: "djiometsa.settings"
    "PYTHONPATH": "/opt/python/current/app/djiometsa:$PYTHONPATH"
  "aws:elasticbeanstalk:container:python":
    WSGIPath: djiometsa/wsgi.py
    NumProcesses: 3
    NumThreads: 20
  "aws:elasticbeanstalk:container:python:staticfiles":
    "/static/": "static/"
